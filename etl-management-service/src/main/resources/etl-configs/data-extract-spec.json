{
  "extractor": {
    "type": "jdbc",
    "config": {
      "dbType": "postgresql",
      "host": "etl-postgres-db",
      "port": 5432,
      "database": "etl",
      "user": "etl",
      "password": "etl"
    }
  },
  "streams": [
    {
      "name": "positions-stream-1",
      "query": {
        "sql": "select id, position_name, position_code from ext.positions"
      },
      "mappings": {
        "id": {
          "type": "integer",
          "targetAttribute": "id",
          "validator": {
            "required": true
          }
        },
        "position_name": {
          "type": "string",
          "targetAttribute": "positionName",
          "validator": {
            "required": true,
            "maxLength": 100
          }
        },
        "position_code": {
          "type": "string",
          "targetAttribute": "positionCode",
          "validator": {
            "required": true,
            "maxLength": 10
          }
        }
      }
    }
  ]
}

